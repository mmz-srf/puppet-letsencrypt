Alias /.well-known "<%= @docroot %>/.well-known"

<Directory "<%= @docroot %>/.well-known">
  Options None
  AllowOverride None
</Directory>

<Location "/.well-known">
  <% if @apache_version == '2.4' %>
  Require all granted
  <% else %>
  Order allow,deny
  Allow from all
  Satisfy any
  <% end %>

  ProxyPass !
</Location>